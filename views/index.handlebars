<div class="container">
	<div class="row" id="form">
		<div class="col-sm-12">
			 <form  method="POST" action="/product/insert" class="form-horizontal">
        		<div class="form-group">
            		<label for="name" class="col-sm-2 control-label">Product name</label>
            		<div class="col-sm-10">
            			<input id="name" type="text" class="form-control" name="name" required autofocus>
            		</div>
        		</div>
        		<div class="form-group">
            		<label for="department" class="col-sm-2 control-label">Deparment</label>
            		<div class="col-sm-10">
	            		<select id="department"class="form-control" name="department">
	            			<option value="books">Books</option>
	            			<option value="movies">Movies</option>
	            			<option value="electronic">Electronic</option>
	            			<option value="home">Home</option>
	            			<option value="beauty">Beauty</option>
	            		</select>
	            	</div>
        		</div>
        		<div class="form-group">
            		<label for="price" class="col-sm-2 control-label">Price</label>
            		<div class="col-sm-10">
            			<input id="price" type="text" class="form-control" name="price">
            		</div>
        		</div>
        		<div class="form-group">
            		<label for="stock" class="col-sm-2 control-label">Stock</label>
            		<div class="col-sm-10">
            			<input id="stock" type="text" class="form-control" name="stock">
            		</div>
        		</div>
        		<div class="form-group">
                    <label class="col-sm-10 col-sm-offset-2">
                        <input id="active" type="checkbox" name="active" checked> Active
                    </label>
                </div>
                
        	</form>
        	<div class="form-group">
                <button type="Submit" class="btn btn-primary" id="submit">Submit</button>
            </div>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-12">
			<div id="data">
				<table class="tablesorter display compact">
		            <thead>
		                <tr>
		                    <th>Name</th>
		                    <th>Department</th>
		                    <th>Price</th>
		                    <th>Stock</th>
		                    <th>Active</th>
		                    <th>Action</th>
		                </tr>
		            </thead>
	                {{#each products}}
	                    <tr>
	                        <td>{{this.name}}</td>
	                        <td>{{this.department}}</td>
	                        <td>{{this.price}}</td>
	                        <td>{{this.stock}}</td>
	                        <td>{{this.active ? 'Yes' : 'No'}}</td>
	                        <td><a data-id="{{this.id}}"" class="btn btn-default btn-sm btn-edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
	                    </tr>
					{{/each}}
				</table>
			</div>
		</div>
	</div>

